<section class="user">
    <h2>Welcome <%= @user.name %></h2>
    <p><b>this is your profile</b></p>
    <% if current_user?(@user) %>
        <div class="actions">
            <%= link_to "Edit Account", edit_user_path(@user), class: "button edit" %>
            <%= button_to "Delete Account", @user, method: :delete, :onclick => "return confirm('Are you sure?')"  , class: "button delete" %>
        </div>
    <%end%>
    <% if @reviews.present? %>
        <h3>Reviews</h3>
        <% @reviews.each do |r|%>
            <div class="review">
                <div class="details"> 
                    <div class="title">
                        <%= link_to r.movie.title, r.movie %>
                    </div>
                    <div class="date">
                        <%= time_ago_in_words(r.created_at) %> ago
                    </div>
                    <p>
                        <%= r.body %>
                    </p>
                </div>
            </div>
        <% end %>
    <% end %>
</section>
