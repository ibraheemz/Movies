<%= form_with model: movie, local: true do |f| %>
    <%= render "shared/errors", object: movie %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :rating %>
    <%= f.text_field :rating %>

    <%= f.label :total_gross %>
    <%= f.number_field :total_gross %>
    
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5 %>

    <%= f.label :released_on %>
    <%= f.date_select :released_on %>

    <%= f.label :poster_image %>
    <%= f.file_field :poster_image %>

    <div class="checkboxes">
        <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) %>
    </div>

    <%= f.submit %>
<%# sets _method to patch automatically %>
<%end%>