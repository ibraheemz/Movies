<header>
    <nav>
      <%= link_to image_tag("logo.png"), root_path %>
      
      <ul class="left">
        <li>
          <%= link_to "All Movies", movies_path %>
        </li>
        <li>
          <%= link_to "Upcoming", movie_filter_path(:upcoming) %>
        </li>
        <li>
          <%= link_to "Released", movie_filter_path(:released) %>
        </li>
      </ul>
      <ul class="right">
        <% if current_user %>
        <li>
          <%= link_to current_user.name, current_user %>
        </li>
        <li>
          <%= button_to "Sign out", session_path,  method: :delete, class: "delete-button" %>
        </li>
        <%else%>
          <li>
            <%= link_to "Sign up", signup_path, class: "button" %>
          </li>
          <li>
            <%= link_to "Sign in", signin_path	, class: "button" %>
          </li>
        <%end%>
      </ul>
    </nav>
</header>